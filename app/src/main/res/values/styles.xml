<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppWidget.Button" parent="Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:backgroundTint">#ff0000</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

     <style name="AppWidget.TextView.Large" parent="Base.TextAppearance.AppCompat.Large"/>
     <style name="AppWidget.TextView.Large.White">
         <item name="android:textColor">#ffffff</item>
     </style>
     <style name="AppWidget.TextView.Large.Extra">
         <item name="android:textSize">@dimen/text_size_extra_large</item>
     </style>

</resources>
