<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/storeId"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/margin_normal"

        style="@style/AppWidget.TextView.Large.Extra"/>

    <TextView
        android:id="@+id/storeCoolersInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="@dimen/margin_normal"
        android:background="@drawable/primary_selectable_background"
        android:clickable="true"
        android:drawableEnd="@drawable/ic_arrow"

        style="@style/AppWidget.TextView.Large.White"

        tools:text="Coolers in the store: 15"/>

    <Button
        android:id="@+id/checkOutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_normal"

        style="@style/AppWidget.Button"
        android:text="@string/button_check_out"/>


</LinearLayout>